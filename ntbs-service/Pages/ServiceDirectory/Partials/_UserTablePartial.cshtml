@model _UserTablePartialModel

<nhs-table id="@Model.TableId">
    <nhs-table-head>
        <nhs-table-item>
            Full Name
        </nhs-table-item>
        <nhs-table-item>
            Job Title
        </nhs-table-item>
        <nhs-table-item>
        </nhs-table-item>
    </nhs-table-head>
    <nhs-table-body>
        @foreach (var user in Model.Users)
        {
            <nhs-table-body-row>
                <nhs-table-item>
                    @user.DisplayName
                </nhs-table-item>
                <nhs-table-item>
                    @user.JobTitle
                </nhs-table-item>
                <nhs-table-item>
                    <a class="link-without-visited-state"
                       href=@($"/ContactDetails/{user.Id}")>View</a>
                </nhs-table-item>
            </nhs-table-body-row>
        }
    </nhs-table-body>
</nhs-table>